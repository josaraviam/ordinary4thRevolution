# .env.example
# Copy to .env and fill in your values

# App settings
APP_NAME="Smart Health Monitoring API"
APP_VERSION="1.0.0"
DEBUG=true

# Server
HOST=0.0.0.0
PORT=8000

# MongoDB connection
MONGO_URI=mongodb://localhost:27017
MONGO_DB=health_monitoring

# JWT config // CHANGE THIS IN PRODUCTION!
JWT_SECRET=your-super-secret-key-change-me
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# CORS // comma-separated origins
CORS_ORIGINS=*
